<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eventure" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/design_default_color_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Eventure.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/design_default_color_background</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.Eventure.SplashScreen" parent="Theme.Eventure.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
    
    <style name="Theme.Eventure.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
</resources>